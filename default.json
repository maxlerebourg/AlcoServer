{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "prConcurrentLimit": 4,
  "branchPrefix": "fix/TE-000-",
  "commitMessagePrefix": "fix: ⬆️ TE-000 ",
  "groupName": "all",
  "osvVulnerabilityAlerts": true,
  "hostRules": [
    {
      "hostType": "npm",
      "baseUrl": "https://gitlab.com/api/v4/packages/npm/",
      "token": "{{ secrets.RENOVATE_TOKEN }}"
    }
  ],

  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "packagePatterns": ["@monisnap/serverless-moni-obs"],
      "enabled": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
